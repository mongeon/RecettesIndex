@page "/books"
@using RecettesIndex.Data
@inject HttpClient Http

<PageTitle>Livres</PageTitle>

<h1>Livres</h1>

@if (books == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in books)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>
                    @if (book.Author != null)
                        {
                            <a href="/authorDetails/@book.Author.Id">@book.Author.FullName</a>
                        }
                    </td>
                    <td>@book.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Inject]
    public required IBookRepository bookRepository { get; set; }
    private Book[]? books;

    protected override async Task OnInitializedAsync()
    {
        books = await bookRepository.GetBooks();
    }
}
