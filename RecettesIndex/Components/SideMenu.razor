﻿<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
      Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small" MenuToggleBehavior=BarMenuToggleBehavior.AllowSingleMenu>
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="customIcon" />
                Recettes
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon IconName="IconName.Home" />
                    Accueil
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="recettes" Match="Match.Prefix" >
                    <BarIcon IconName="IconName.PizzaSlice" />
                    Recettes
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="books" Match="Match.Prefix">
                    <BarIcon IconName="IconName.Book" />
                    Livres
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="authors" Match="Match.Prefix">
                    <BarIcon IconName="IconName.Users" />
                    Auteurs
                </BarLink>
            </BarItem>
        </BarStart>
    </BarMenu>
    <BarEnd />
</Bar>

@code {
    RenderFragment customIcon =@<img src="/icon-192.png" style="width:32px; height: 32px" />;
}
