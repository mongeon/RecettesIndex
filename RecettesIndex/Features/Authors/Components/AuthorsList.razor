<MudTable Items="@Authors">
    <HeaderContent>
        <MudTh ><MudTableSortLabel SortBy="new Func<Author, object>(x=>x.FullName)">Nom</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nom">
            <MudLink Href="@($"/authors/Details/{@context.Id}")">@context.FullName</MudLink>
        </MudTd>
    </RowTemplate>   
</MudTable>

@code {
    [Parameter]
    public IEnumerable<Author> Authors { get; set; } = new List<Author>();
}
