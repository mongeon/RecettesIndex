<MudTable Items="@Books">
    <HeaderContent>
        <MudTh> <MudTableSortLabel SortBy="new Func<Book, object>(x=>x.Title)">Titre</MudTableSortLabel></MudTh>
        <MudTh>Auteur</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Titre">
            <MudLink Href="@($"/books/Details/{@context.Id}")">@context.Title</MudLink>
        </MudTd>
        <MudTd DataLabel="Auteur">
            @if (context.Authors != null)
            {
                <RecettesIndex.Features.Authors.Components.AuthorsList Authors="context.Authors" />
            }
        </MudTd>
    </RowTemplate>
</MudTable>
@code {
    [Parameter]
    public IEnumerable<Book> Books { get; set; } = new List<Book>();
}
