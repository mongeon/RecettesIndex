<MudTable Items="@Books">
    <HeaderContent>
        <MudTh>Titre</MudTh>
        <MudTh>Auteur</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Titre">
            <MudLink Href="@($"/books/Details/{@context.Id}")">@context.Title</MudLink>
        </MudTd>
        <MudTd DataLabel="Auteur">
            @if (context.Author != null)
            {
                <MudLink Href="@($"/authors/Details/{@context.Author.Id}")">@context.Author.FullName</MudLink>
            }
        </MudTd>
    </RowTemplate>
</MudTable>
@code {
    [Parameter]
    public IEnumerable<Book> Books { get; set; } = new List<Book>();
        }
