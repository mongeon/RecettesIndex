@using Microsoft.AspNetCore.Components
@using MudBlazor
@using RecettesIndex.Models
@using RecettesIndex.Services.Abstractions
@using Microsoft.Extensions.Logging
@inject IAuthorService AuthorService
@inject ISnackbar Snackbar
@inject ILogger<EditAuthorDialog> Logger

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
        <MudTextField @bind-Value="author.Name" Label="Prénom" Required="true" RequiredError="Le prénom de l'auteur est requis." Variant="Variant.Outlined" Class="mb-2" />
        <MudTextField @bind-Value="author.LastName" Label="Nom de famille (optionnel)" Variant="Variant.Outlined" Class="mb-2" />
        </MudForm>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <MudAlert Severity="Severity.Error">@errorMessage</MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Secondary" Variant="Variant.Text" Disabled="@isSaving">Annuler</MudButton>
        <MudButton OnClick="SaveAsync" Color="Color.Primary" Variant="Variant.Filled" Disabled="@isSaving" StartIcon="@Icons.Material.Filled.Save">
            @if (isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <span>Enregistrer</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] 
    public Author AuthorToEdit { get; set; } = new();
    
    [CascadingParameter] 
    public required IMudDialogInstance MudDialog { get; set; }
    
    private MudForm _form = default!;
    private Author author = new();
    private string? errorMessage;
    private bool isSaving = false;
    
    protected override void OnInitialized()
    {
        author = new Author
        {
            Id = AuthorToEdit.Id,
            Name = AuthorToEdit.Name,
            LastName = AuthorToEdit.LastName,
            CreationDate = AuthorToEdit.CreationDate
        };
    }
    
    private async Task SaveAsync()
    {
        errorMessage = null;
        isSaving = true;
        
        await _form.Validate();
        if (!_form.IsValid)
        {
            isSaving = false;
            return;
        }

        try
        {
            // Use service layer for update
            var result = await AuthorService.UpdateAsync(author);
            
            if (result.IsSuccess)
            {
                Snackbar.Add("Auteur modifié avec succès!", Severity.Success);
                MudDialog.Close(DialogResult.Ok(result.Value));
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Échec lors de la mise à jour de l'auteur.";
                Snackbar.Add(errorMessage, Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Unexpected error updating author");
            errorMessage = "Une erreur inattendue s'est produite.";
            Snackbar.Add(errorMessage, Severity.Error);
        }
        finally
        {
            isSaving = false;
        }
    }
    
    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
