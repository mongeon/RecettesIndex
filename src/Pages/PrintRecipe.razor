@page "/recipes/{id:int}/print"
@using Microsoft.JSInterop
@using MudBlazor
@using RecettesIndex.Models
@using RecettesIndex.Services
@using Supabase
@inject IJSRuntime JSRuntime
@inject Client SupabaseClient

<PageTitle>Imprimer Recette - @(recipe?.Name ?? "Chargement...")</PageTitle>

<style>
    /* Print Styles */
    @@media print {
        .no-print { display: none !important; }
        .print-container { padding: 0; margin: 0; }
        body { background-color: white; }
        
        /* Compact Mode Overrides */
        .compact .print-header h1 { font-size: 1.5rem; margin-bottom: 0.5rem; }
        .compact .print-section { margin-bottom: 1rem; page-break-inside: avoid; }
        .compact .print-body { font-size: 0.9rem; }
        .compact .print-notes { white-space: pre-wrap; font-size: 0.9rem; }
        .compact .rating-color-bar { height: 2px; margin-top: 2px; }
    }

    /* Screen Styles for Preview */
    .print-container { max-width: 800px; margin: 0 auto; padding: 20px; }
    .print-content { background: white; padding: 40px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
    
    /* Compact Preview */
    .compact.print-content { padding: 20px; }
    .compact h1 { font-size: 1.5rem; }
    .compact .print-section { margin-bottom: 1rem; }
    
    /* Standard Styles */
    .print-header { text-align: center; margin-bottom: 30px; border-bottom: 2px solid #eee; padding-bottom: 20px; }
    .print-header h1 { color: #333; margin: 0 0 10px 0; }
    
    .print-rating { display: flex; align-items: center; justify-content: center; gap: 10px; }
    .star { font-size: 1.2rem; color: #ccc; }
    .star.filled { color: #FFC107; }
    .rating-color-bar { height: 4px; width: 100px; margin: 5px auto 0; border-radius: 2px; }

    .print-section { margin-bottom: 25px; }
    .print-section h2 { font-size: 1.1rem; color: #666; border-bottom: 1px solid #eee; padding-bottom: 5px; margin-bottom: 10px; text-transform: uppercase; letter-spacing: 1px; }
    
    .print-notes { white-space: pre-wrap; line-height: 1.6; color: #333; }
    
    .metadata { margin-top: 40px; border-top: 1px solid #eee; padding-top: 10px; font-size: 0.8rem; color: #999; text-align: right; }
    .print-footer { text-align: center; font-size: 0.8rem; color: #ccc; margin-top: 20px; }
</style>

<div class="print-container">
    @if (loading)
    {
        <MudProgressCircular Indeterminate="true" />
    }
    else if (recipe == null)
    {
        <MudText>Recette introuvable.</MudText>
    }
    else
    {
        <!-- Print Options (No Print) -->
        <div class="no-print">
            <MudPaper Elevation="2" Class="pa-4 mb-4">
                <MudText Typo="Typo.h6" Class="mb-3">Options d'Impression</MudText>
                <MudGrid>
                    <MudItem xs="12" sm="6" md="4">
                        <MudCheckBox @bind-Value="showRating" 
                                    Label="Afficher l'évaluation" 
                                    Color="Color.Primary"
                                    Disabled="@(recipe.Rating == 0 || recipe.Rating < 1)" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="4">
                        <MudCheckBox @bind-Value="showNotes" 
                                    Label="Afficher les notes" 
                                    Color="Color.Primary"
                                    Disabled="@(string.IsNullOrWhiteSpace(recipe.Notes))" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="4">
                        <MudCheckBox @bind-Value="showBookInfo" 
                                    Label="Afficher le livre" 
                                    Color="Color.Primary"
                                    Disabled="@(book == null)" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="4">
                        <MudCheckBox @bind-Value="showStoreInfo" 
                                    Label="Afficher le magasin" 
                                    Color="Color.Primary"
                                    Disabled="@(store == null)" />
                    </MudItem>
                    <MudItem xs="12" sm="6" md="4">
                        <MudCheckBox @bind-Value="compactMode" 
                                    Label="Mode Compact (Économique)" 
                                    Color="Color.Secondary" />
                    </MudItem>
                </MudGrid>
                <MudDivider Class="my-3" />
                <MudStack Row Spacing="2">
                    <MudButton Variant="Variant.Filled" 
                              Color="Color.Primary" 
                              OnClick="PrintPage" 
                              StartIcon="@Icons.Material.Filled.Print">
                        Imprimer
                    </MudButton>
                    <MudButton Href="@($"/recipes/{id}")" 
                              Variant="Variant.Text" 
                              StartIcon="@Icons.Material.Filled.ArrowBack">
                        Retour à la recette
                    </MudButton>
                </MudStack>
            </MudPaper>
        </div>

        <!-- Print Content -->
        <div class="print-content @(compactMode ? "compact" : "")">
            <div class="print-header">
                <h1>@recipe.Name</h1>
                
                @if (showRating && recipe.Rating > 0)
                {
                    <div class="print-rating">
                        <span class="rating-label">Évaluation: </span>
                        <span class="rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= recipe.Rating)
                                {
                                    <span class="star filled">★</span>
                                }
                                else
                                {
                                    <span class="star empty">☆</span>
                                }
                            }
                        </span>
                        <span class="rating-number">(@recipe.Rating/5)</span>
                    </div>
                    
                    <!-- Color Indicator Bar -->
                    <div class="rating-color-bar" style="@RatingColorService.GetRatingColorBarStyle(recipe.Rating)"></div>
                }
            </div>

            <div class="print-body">
                @if (showBookInfo && book != null)
                {
                    <div class="print-section book-info">
                        <h2>Source</h2>
                        <div class="book-details">
                            <p><strong>Livre:</strong> @book.Name</p>
                            
                            @if (recipe.BookPage.HasValue)
                            {
                                <p><strong>Page:</strong> @recipe.BookPage</p>
                            }
                            
                            @if (book.Authors != null && book.Authors.Any())
                            {
                                <p><strong>Auteur(s):</strong> @string.Join(", ", book.Authors.Select(a => a.FullName))</p>
                            }
                        </div>
                    </div>
                }

                @if (showStoreInfo && store != null)
                {
                    <div class="print-section store-info">
                        <h2>Magasin</h2>
                        <div class="store-details">
                            <p><strong>Nom:</strong> @store.Name</p>
                            
                            @if (!string.IsNullOrWhiteSpace(store.Address))
                            {
                                <p><strong>Adresse:</strong> @store.Address</p>
                            }
                            
                            @if (!string.IsNullOrWhiteSpace(store.Phone))
                            {
                                <p><strong>Téléphone:</strong> @store.Phone</p>
                            }
                            
                            @if (!string.IsNullOrWhiteSpace(store.Website))
                            {
                                <p><strong>Site Web:</strong> @store.Website</p>
                            }
                        </div>
                    </div>
                }

                @if (showNotes && !string.IsNullOrWhiteSpace(recipe.Notes))
                {
                    <div class="print-section notes-section">
                        <h2>Notes & Instructions</h2>
                        <div class="print-notes">@recipe.Notes</div>
                    </div>
                }

                <div class="print-section metadata">
                    <p class="creation-date">
                        <strong>Ajoutée le:</strong> @recipe.CreationDate.ToString("dd MMMM yyyy")
                    </p>
                </div>
            </div>

            <div class="print-footer">
                <p>Imprimé depuis Mes Recettes le @DateTime.Now.ToString("dd MMMM yyyy à HH:mm")</p>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int id { get; set; }
    private Recipe? recipe;
    private Book? book;
    private Store? store;
    private bool loading = true;

    // Print options
    private bool showRating = true;
    private bool showNotes = true;
    private bool showBookInfo = true;
    private bool showStoreInfo = true;
    private bool compactMode = false;

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        var response = await SupabaseClient.From<Recipe>().Where(x => x.Id == id).Get();
        recipe = response.Models?.FirstOrDefault();
        
        if (recipe?.BookId != null)
        {
            var bookResponse = await SupabaseClient.From<Book>().Where(x => x.Id == recipe.BookId).Get();
            book = bookResponse.Models?.FirstOrDefault();
        }
        
        if (recipe?.StoreId != null)
        {
            var storeResponse = await SupabaseClient.From<Store>().Where(x => x.Id == recipe.StoreId).Get();
            store = storeResponse.Models?.FirstOrDefault();
        }
        
        // Automatically disable options when data is not available
        if (recipe != null)
        {
            if (recipe.Rating == 0 || recipe.Rating < 1) showRating = false;
            if (string.IsNullOrWhiteSpace(recipe.Notes)) showNotes = false;
            if (book == null) showBookInfo = false;
            if (store == null) showStoreInfo = false;
        }
        
        loading = false;
    }

    private async Task PrintPage()
    {
        await JSRuntime.InvokeVoidAsync("print");
    }
}
