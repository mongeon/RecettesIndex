                        <MudText Typo="Typo.subtitle2" Color="Color.Warning">Recettes ajout√©es (30 jours)</MudText>
                        <MudText Typo="Typo.h4" Class="mt-2">@statistics.RecipesAddedLast30Days</MudText>
