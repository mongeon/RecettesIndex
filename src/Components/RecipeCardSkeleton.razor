@using MudBlazor

<div class="skeleton-card">
    <MudSkeleton SkeletonType="SkeletonType.Rectangle" 
                 Height="180px" 
                 Animation="Animation.Wave"
                 Class="skeleton-card-image" />
    
    <div class="skeleton-card-content">
        <MudSkeleton SkeletonType="SkeletonType.Text" 
                     Height="28px" 
                     Animation="Animation.Wave"
                     Class="mb-2" />
        <MudSkeleton SkeletonType="SkeletonType.Text" 
                     Width="60%" 
                     Height="28px" 
                     Animation="Animation.Wave"
                     Class="mb-3" />
        
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" 
                     Width="40%" 
                     Height="24px" 
                     Animation="Animation.Wave"
                     Class="mb-2" />
        
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" 
                     Width="70%" 
                     Height="20px" 
                     Animation="Animation.Wave"
                     Class="mb-1" />
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" 
                     Width="90%" 
                     Height="20px" 
                     Animation="Animation.Wave" />
    </div>
    
    <div class="skeleton-card-actions">
        <MudSkeleton SkeletonType="SkeletonType.Circle" 
                     Width="40px" 
                     Height="40px" 
                     Animation="Animation.Wave" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" 
                     Width="40px" 
                     Height="40px" 
                     Animation="Animation.Wave" />
        <MudSkeleton SkeletonType="SkeletonType.Circle" 
                     Width="40px" 
                     Height="40px" 
                     Animation="Animation.Wave" />
    </div>
</div>

@code {
    // No parameters needed for skeleton loader
}
