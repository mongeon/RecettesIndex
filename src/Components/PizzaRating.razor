@using MudBlazor

<MudRating SelectedValue="Value"
           SelectedValueChanged="OnValueChanged"
           MaxValue="5"
           FullIcon="@Icons.Material.Filled.LocalPizza"
           EmptyIcon="@Icons.Material.Outlined.LocalPizza"
           ReadOnly="@ReadOnly"
           Size="@Size"
           aria-label="@(ReadOnly ? $"Note : {Value} sur 5" : "Choisir une note sur 5")" />

@code {
    [Parameter] public int Value { get; set; }
    [Parameter] public EventCallback<int> ValueChanged { get; set; }
    [Parameter] public bool ReadOnly { get; set; } = true;
    [Parameter] public Size Size { get; set; } = Size.Medium;

    private async Task OnValueChanged(int value)
    {
        Value = value;
        await ValueChanged.InvokeAsync(value);
    }
}
