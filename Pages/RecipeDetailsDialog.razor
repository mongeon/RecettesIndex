@using MudBlazor
@using RecettesIndex.Models
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Recipe.Name</MudText>
        <MudText>Rating: <PizzaRating Value="@Recipe.Rating" /></MudText>
        <MudText>Notes: @Recipe.Notes</MudText>
        <MudText>Created: @Recipe.CreationDate.ToShortDateString()</MudText>
        @if (Recipe.BookId != null)
        {
            <MudText>Book ID: @Recipe.BookId</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public Recipe Recipe { get; set; }
    void Close() => MudDialog.Close();
}
